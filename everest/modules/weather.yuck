(defpoll temp
	:interval "30s"
	:initial "unavailable"
	"tweather --opts temp"
)

(defpoll icon
	:interval "30s"
	:initial "./images/weather/error.png"
	"tweather --opts icon"
)

(defwidget weather []
	(box
		:class "weather"
		(image 
			:class "icon"
			:path "${icon}" 
			:image-width 16 
			:image-height 16
		)
		(label :text "${temp}")
	)
)
